<% show_post ||= false %>

<div class='well span8'>
	<em>"<%= comment.body %>"</em>
	<% if show_post %>
		on <%= link_to comment.post.title, post_path(comment.post) %>
	<% end %>
	<p>
		<small class='quiet'>by <%= link_to comment.creator.username, user_path(comment.creator) %> at <%= display_datetime(comment.created_at) %></small>
	</p>
</div>